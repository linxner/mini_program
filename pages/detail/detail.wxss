.contain {
  box-sizing: border-box;
  width: 100%;
  font-size: 12px;
}

.detail-banner {
  width: 100%;
  height: 150px;
  background-repeat: no-repeat;
  background-position: 0 -50px;
  background-size: cover;
}

.cover {
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.7;
  position: relative;
}

.detail-img {
  display: block;
  max-width: 100px;
  max-height: 138px;
}

.detail-dec {
  width: 100%;
  position: relative;
  top: 30px;
  display: flex;
  box-sizing: border-box;
  padding: 0 20px;
  align-items: center;
}

.dec {
  width: 70%;
  color: #fff;
  margin-left: 20px;
  font-size: 18px;
}

.en-name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dec-bottom {
  width: 100%;
  display: flex;
  align-items: center;
  margin-top: 10px;
}

.rating {
  font-size: 30px;
  margin-right: 20px;
}

.star-rating {
  width: 100%;
  height: 11px;
  background: url("https://img3.doubanio.com/f/shire/b8f4c3672ef81106701071831e22422a745d3b74/pics/rating_icons/ic_rating_s.png") no-repeat;
}

.rating-count {
  font-size: 12px;
  color: #aaa;
}

.description {
  margin-top: 40px;
  box-sizing: border-box;
  width: 100%;
  line-height: 1.5;
  padding: 0 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.btns {
  width: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  justify-content: space-between;
  margin-top: 20px;
  padding: 0 20px;
}

.btn {
  width: 45%;
  font-size: 14px;
}

.dec-title {
  line-height: 3;
  margin-top: 10px;
  color: #ccc;
}

.dec-detail {
  box-sizing: border-box;
  padding: 0 20rpx;
}

.comment-list {
  margin-top: 10px;
}

.comment {
  box-sizing: border-box;
  padding: 0 20rpx;
}

.comment-title {
  width: 100%;
  display: flex;
}

.comment-img {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
}

.comment-title-top {
  width: 100%;
}

.commentor {
  margin-right: 5px;
  float: left;
}

.date {
  margin-top: 5px;
  color: #ccc;
  clear: both;
}

.comment-content {
  margin-top: 10px;
}

.comment-star {
  width: 55px;
  height: 11px;
  background: url("https://img3.doubanio.com/f/shire/b8f4c3672ef81106701071831e22422a745d3b74/pics/rating_icons/ic_rating_s.png") no-repeat;
  float: left;
  line-height: 16px;
}
