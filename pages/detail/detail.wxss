.contain {
  box-sizing: border-box;
  width: 100%;
  font-size: 14px;
}

.detail-banner {
  width: 100%;
  height: 150px;
  background-repeat: no-repeat;
  background-position: 0 -50px;
  background-size: cover;
  background-image: url("http://img3.doubanio.com/view/photo/s_ratio_poster/public/p510876377.jpg");
}

.cover {
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.7;
  position: relative;
}

.detail-img {
  display: block;
  max-width: 100px;
  max-height: 138px;
}

.detail-dec {
  width: 100%;
  position: relative;
  top: 30px;
  display: flex;
  box-sizing: border-box;
  padding-left: 20px;
  align-items: center;
}

.dec {
  color: #fff;
  margin-left: 20px;
  font-size: 18px;
}

.dec-bottom {
  width: 100%;
  display: flex;
  align-items: center;
  margin-top: 10px;
}

.rating {
  font-size: 30px;
  margin-right: 20px;
}

.star-rating {
  width: 70%;
  height: 11px;
  background: url("https://img3.doubanio.com/f/shire/b8f4c3672ef81106701071831e22422a745d3b74/pics/rating_icons/ic_rating_s.png") no-repeat 0 -22px;
}

.rating-count {
  font-size: 12px;
  color: #aaa;
}

.description {
  margin-top: 40px;
  font-size: 14px;
  box-sizing: border-box;
  width: 100%;
  line-height: 1.5;
  padding: 0 20rpx;
}

.btns {
  width: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  justify-content: space-between;
  margin-top: 20px;
  padding: 0 20px;
}

.btn {
  width: 45%;
  font-size: 14px;
}

.dec-title {
  font-size: 14px;
  line-height: 3;
  margin-top: 10px;
  color: #ccc;
}

.dec-detail {
  box-sizing: border-box;
  padding: 0 20rpx;
}
